{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "openSource",
  "incremental": true,
  "lineWidth": 160,
  "typescript": {
    "useBraces": "preferNone",
    "singleBodyPosition": "nextLine",
    "preferHanging": true,
    "nextControlFlowPosition": "nextLine",
    "arrowFunction.useParentheses": "preferNone",
    "tryStatement.nextControlFlowPosition": "sameLine"
  },
  "json": {
    "indentWidth": 2
  },
  "includes": ["**/*.{ts,tsx,js,jsx,json,md,css}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "public/vs",
    "build",
    "src/resources",
    "CHANGELOG.md"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.30.0.wasm",
    "https://plugins.dprint.dev/json-0.7.0.wasm",
    "https://plugins.dprint.dev/markdown-0.4.0.wasm",
    "https://plugins.dprint.dev/prettier-0.1.0.exe-plugin@1c335dffb7e75f6268f0c8c0bc2a61a60548b3896d9deb498cecb76939ae8262"
  ]
}
